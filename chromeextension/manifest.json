{
  "manifest_version": 3,
  "name": "Screen Emotion Detector",
  "version": "1.0",
  "description": "Detects emotions in screen captures",
  "permissions": [
    "activeTab",
    "desktopCapture",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5001/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  }
}
